{escript_shebang, "#!/usr/bin/env escript\n"}.
{escript_comment, "%% -nocookie\n"}.

{erl_opts, [debug_info, {parse_transform, lager_transform}]}.

{escript_incl_apps, [lager, getopt, cluster_info]}.

{deps, [
        {cluster_info, ".*", {git, "git://github.com/evanmcc/cluster_info", {branch, "pevm_riaknostic_move"}}},
        {lager, "1.*", {git, "git://github.com/basho/lager", {branch, "master"}}},
        {getopt, "0.3.*", {git, "git://github.com/jcomellas/getopt.git", "2981dfe"}},
        {meck, ".*", {git, "git://github.com/eproxus/meck"}}
        ]}.

{edoc_opts, [{stylesheet_file, "priv/edoc.css"}]}.
